<%= simple_form_for :event, url: events_path do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <%= f.input :start_time, input_html: {class:'datepicker'} %>

  <div class="field">
    <%= f.label :food %><br>
    <%= f.check_box :food %>
  </div>
  <div class="field">
    <%= f.label :swag %><br>
    <%= f.check_box :swag %>
  </div>
  <div class="field">
    <%= f.label :prizes %><br>
    <%= f.check_box :prizes %>
  </div>
  
   <%= f.input :address %>
   <%= f.input :city %>
   <%= f.input :state %>
   <%= f.input :zip_code %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript">
$(document).ready(function(){
  $('#event_start_time').click(function() {
    $('.datepicker').pickadate({
      selectMonths: true, // Creates a dropdown to control month
      selectYears: 15 // Creates a dropdown of 15 years to control year
    });
  })
})
</script>
