<div class="row">
  <div class="col s12">
    <%= image_tag("gathr_logo.png", :alt => "outFire", size: "50x79", class: "center") %>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs text-center center-form-h">
    <%= f.input :first_name, required: true, autofocus: true %>
    <%= f.input :last_name, required: true, autofocus: true %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password, required: true %>
    <div class="form-hint">8 characters minimum</div>
    <%= f.input :password_confirmation, required: true %>
    <%= check_box_tag(:organizer) %>
    <%= label_tag(:organizer, "I'm an organizer") %>
  <div class="form-actions center">
    <%= f.button :submit, "Sign up", class:"btn btn-h" %>
  </div>
<% end %>

<div class="center link-to-signup">
  <%= link_to('Already have an account?', new_user_session_path) %>
</div>
